# Application Settings
APP_NAME="E-commerce Intelligence Agent"
APP_VERSION="0.1.0"
DEBUG=True
LOG_LEVEL=INFO
DEMO_MODE=True  # Set to False in production to require authentication

# Database
DATABASE_URL=sqlite+aiosqlite:///./ecommerce_intelligence.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_V1_PREFIX=/api/v1

# LLM Provider Configuration
# Options: "openai" or "gemini"
LLM_PROVIDER=openai

# OpenAI Configuration (if LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Google Gemini Configuration (if LLM_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=True

